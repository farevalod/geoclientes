.col-md-4.contact-events
  -@events.each do |e|
    .event{style: "margin-bottom:30px;background:#ddd;padding:15px;"}
      Nombre del cliente:
      .event-customer-name
        %a{href: "customers/"+e.contact.customer.id.to_s}=e.contact.customer.name
      Direccion:
      .event-customer-address=e.contact.customer.address
      Fecha:
      .event-date=e.date
      Tipo:
      .event-type=e.event_type
      Nombre del vendedor:
      .event-user
        %a{href: "users/"+e.user.id.to_s}=e.user.name
      Nombre del contacto:
      .event-contact
        %a{href: "contacts/"+e.contact.id.to_s}=e.contact.name
.col-md-5#map-canvas{:style => "width:800px;height:400px;margin:0px;padding:0px;"}
  %nbsp
.row
:javascript
  function initialize() {
    var locations = JSON.parse('#{@locs.to_json}')
    var mapOptions = {
      zoom: 14,
      center: new google.maps.LatLng(locations[0][1],locations[0][2])
  }
  var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
  var marker,i;
  for (i = 0;i < locations.length;i++){
    var marker = new google.maps.Marker({
      position: new google.maps.LatLng(locations[i][1],locations[i][2]),
      map: map,
      title: locations[i][0]
    });
    }
  }
  google.maps.event.addDomListener(window, 'load', initialize);
